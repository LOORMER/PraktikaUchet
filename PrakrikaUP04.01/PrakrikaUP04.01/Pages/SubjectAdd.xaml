<Page x:Class="PrakrikaUP04._01.Pages.SubjectAdd"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PrakrikaUP04._01.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SubjectAdd">

    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Background="LightGreen" Width="800">
            <TextBlock Text="Добавление/Изменение" Margin="245,10" FontSize="30" />
        </StackPanel>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="70,0" VerticalAlignment="Center">
            
            <TextBlock Width="300" Text="Название предмета" Height="30" FontSize="20"/>
            <TextBox Width="300"  Height="30"  Margin="5" Text="{Binding Subject_name}"/>
           
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10,0">
            <Button x:Name="Add" Content="Добавить" Width="100" Height="30" Margin="10,10" Click="Add_Click"/>
            <Button x:Name="Back" Content="Назад" Width="100" Height="30" Margin="10,10" Click="Back_Click"/>
        </StackPanel>
    </Grid>
</Page>
