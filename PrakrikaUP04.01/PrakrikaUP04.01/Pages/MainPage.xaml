<Page x:Class="PrakrikaUP04._01.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PrakrikaUP04._01.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1">
            <TextBlock Text="Учёт кадров Школа №3" FontSize="30"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="ClassBtn" Content="Классы" Width="150" Margin="0,5" Height="30" Click="ClassBtn_Click"/>
            <Button x:Name="EmployeeBtn" Content="Сотрудники" Width="150" Margin="0,5" Height="30" Click="EmployeeBtn_Click"/>
            <Button x:Name="Payment" Content="Зарплата" Width="150" Margin="0,5" Height="30" Click="Payment_Click"/>
            <Button x:Name="Position" Content="Должность" Width="150" Margin="0,5" Height="30" Click="Position_Click"/>
            <Button x:Name="SubjectBtn" Content="Предметы" Width="150" Margin="0,5" Height="30" Click="SubjectBtn_Click"/>
        </StackPanel>
    </Grid>
</Page>
